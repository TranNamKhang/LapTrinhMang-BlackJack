<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundColor" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="PrimaryTextColor" Color="White"/>
    <SolidColorBrush x:Key="AccentColor" Color="#FF007ACC"/>
    <SolidColorBrush x:Key="CardBackgroundColor" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CardBorderColor" Color="#FFCCCCCC"/>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentColor}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="6"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ChipButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Width" Value="72"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Background" Value="#FFFFD54F"/>
        <Setter Property="Foreground" Value="#FF222222"/>
    </Style>

    <Style x:Key="ConfirmButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Width" Value="120"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
