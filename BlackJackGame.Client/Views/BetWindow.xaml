<Window x:Class="BlackJackGame.Client.BetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đặt Cược" Height="260" Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True" ShowInTaskbar="False" Topmost="True">

    <Border CornerRadius="16" Background="#DD1B3B6F" BorderBrush="Gold" BorderThickness="3" Padding="16">
        <StackPanel>
            <TextBlock Text="Chọn số tiền cược" Foreground="Gold" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,14"/>
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="50" Tag="50" Click="Chip_Click" Margin="6" Width="80" Height="80" FontWeight="Bold"/>
                <Button Content="100" Tag="100" Click="Chip_Click" Margin="6" Width="80" Height="80" FontWeight="Bold"/>
                <Button Content="200" Tag="200" Click="Chip_Click" Margin="6" Width="80" Height="80" FontWeight="Bold"/>
                <Button Content="500" Tag="500" Click="Chip_Click" Margin="6" Width="80" Height="80" FontWeight="Bold"/>
            </WrapPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Xác nhận" Click="Confirm_Click" Width="120" Margin="8"/>
                <Button Content="Hủy" Click="Cancel_Click" Width="120" Margin="8"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
