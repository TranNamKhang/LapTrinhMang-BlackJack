<Window x:Class="BlackJackGame.Client.Views.WinLosePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Result" Height="220" Width="360"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None" Background="Transparent" AllowsTransparency="True" Topmost="True" ShowInTaskbar="False">
    <Grid Background="#99000000">
        <Border Width="320" Height="160" CornerRadius="10" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="16">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="ResultText" Text="YOU WIN!" FontSize="28" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,12"/>
                <Button Content="OK" Width="100" Height="34" Click="Ok_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
