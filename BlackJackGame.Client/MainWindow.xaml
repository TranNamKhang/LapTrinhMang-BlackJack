<Window x:Class="BlackJackGame.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:BlackJackGame.Client.Controls"
        Title="Blackjack" Height="600" Width="900"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Tiêu đề -->
            <TextBlock Text="Blackjack Demo"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryTextColor}"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Các lá bài -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <controls:CardControl x:Name="CardA" Width="100" Height="150" Margin="6"/>
                <controls:CardControl x:Name="CardB" Width="100" Height="150" Margin="6"/>
                <controls:CardControl x:Name="CardC" Width="100" Height="150" Margin="6"/>
            </StackPanel>

            <!-- Khu vực rút bài -->
            <Border BorderBrush="{StaticResource CardBorderColor}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Background="{StaticResource CardBackgroundColor}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="5"
                    Margin="0,0,0,20">
                <Image x:Name="CardImage"
                       Width="120"
                       Height="180"
                       Stretch="Uniform"/>
            </Border>

            <!-- Nút chức năng -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Lật bài" Style="{StaticResource PrimaryButtonStyle}" Click="FlipCards_Click"/>
                <Button Content="Đặt cược" Style="{StaticResource PrimaryButtonStyle}" Click="PlaceBet_Click"/>
                <Button Content="Rút bài" Style="{StaticResource PrimaryButtonStyle}" Click="DrawRandomCard_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
